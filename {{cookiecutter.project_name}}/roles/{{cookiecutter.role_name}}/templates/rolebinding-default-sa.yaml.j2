---
# A RoleBinding to allow the cert-manager cm-acme-http-solver Pod
# to deploy to our namespace - by binding the SA to the chosen PSP.
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: default-sa
  namespace: {{ "{{" }} {{cookiecutter.var_prefix}}_namespace {{ "}}" }}
roleRef:
  kind: Role
  name: {{cookiecutter.object_name}}-psp
  apiGroup: rbac.authorization.k8s.io
subjects:
- kind: ServiceAccount
  name: default
  namespace: {{ "{{" }} {{cookiecutter.var_prefix}}_namespace {{ "}}" }}
