{
  "project_name": "pysimple-ansible",
  "namespace": "{{ cookiecutter.project_name | lower | replace(' ', '-') }}",
  "psp": "im-core-unrestricted",
  "role_name": "{{ cookiecutter.namespace | replace('-', '_') }}",
  "image_name": "alanbchristie/pysimple",
  "image_tag": "latest",
  "var_prefix": "ps",
  "deployment": ["cronjob", "daemonset", "deployment", "job", "statefulset"],
  "wait_for_job": "{{ 'y' if cookiecutter.deployment in ['job'] else 'n' }}",
  "add_probes": "{{ 'y' if cookiecutter.deployment in ['deployment', 'daemonset', 'statefulset'] else 'n' }}",
  "add_cicd_trigger": "{{ 'y' if cookiecutter.deployment in ['deployment', 'statefulset'] else 'n' }}",
  "add_service": "{{ 'y' if cookiecutter.deployment in ['deployment', 'statefulset'] else 'n' }}",
  "container_port": "{{ '8080' if cookiecutter.add_service == 'y' else '' }}",
  "add_pvc": "n",
  "add_ingress": "{{ 'y' if cookiecutter.add_service == 'y' else 'n' }}",
  "ingress_hostname": "{{ 'demo.informaticsmatters.org' if cookiecutter.add_ingress == 'y' else '' }}",
  "ingress_path": "{{ 'pysimple' if cookiecutter.add_ingress == 'y' else '' }}",
  "add_secret": "n",
  "add_configmap": "n"
}
